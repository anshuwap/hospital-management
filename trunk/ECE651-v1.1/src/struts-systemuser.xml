<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
		<package name="systemuser" extends="struts-default"  namespace="/systemuser">
		<interceptors>
			<interceptor name="authInterceptor" class="ece651.interceptor.AuthInterceptor"></interceptor>            
			<interceptor name="timer" class="com.opensymphony.xwork2.interceptor.TimerInterceptor"></interceptor>
			<interceptor-stack name="authStack">
				<interceptor-ref name="authInterceptor"></interceptor-ref>				
				<interceptor-ref name="timer"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<action name="createSystemUserAction" class="ece651.action.SystemUserAction" method="CreateSystemUser">
			<result name="success" type="dispatcher">/WEB-INF/itguy/createSystemUser.jsp</result>
			<result name="error" type="dispatcher">/WEB-INF/itguy/createSystemUser.jsp</result>
			<result name="invalid.token">/WEB-INF/itguy/createSystemUser.jsp</result>
			<interceptor-ref name="token" />
			<interceptor-ref name="authStack"></interceptor-ref>
		</action>
		
		<action name="editSystemUser" class="ece651.action.SystemUserAction" method="EditSystemUser">
		    <result name="success" type="dispatcher">/WEB-INF/itguy/editSystemUser.jsp</result>
			<result name="error" type="dispatcher">/WEB-INF/itguy/editSystemUser.jsp</result>
		      <interceptor-ref name="authStack"></interceptor-ref>
		</action>
		
		<action name="searchSystemUser" class="ece651.action.SystemUserAction" method="SearchSystemUser">
		    <result name="success" type="dispatcher">/WEB-INF/itguy/editSystemUser.jsp</result>
			<result name="error" type="dispatcher">/WEB-INF/itguy/editSystemUser.jsp</result>
			<interceptor-ref name="authStack"></interceptor-ref>
		</action>
		
<!--	Page Navigation Action	-->
		<action name="toCreateSystemUserPage">
			<result name="success">/WEB-INF/itguy/createSystemUser.jsp</result>
			<interceptor-ref name="authStack"></interceptor-ref>
		</action>		
		
		<action name="toMainPage" class="ece651.action.SystemUserAction" method="BackToMainPage" >
			<result name="success" type="chain">
            	<param name="actionName">${roleName}</param>
            	<param name="namespace">/</param>
            </result>
			<result name="error">/login.jsp</result>
			<interceptor-ref name="authStack"></interceptor-ref>
		</action>
		
		</package>
</struts>
